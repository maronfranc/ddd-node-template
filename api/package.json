    "errorOnDeprecated": false,
    "verbose": true,
    "testEnvironment": "node",
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/"
    ],
    "setupFilesAfterEnv": [
      "jest-extended/all"
    ]
  }
